{{ header }}
<ul class="breadcrumb btn-back-margin-top">
    {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
</ul>
<div id="product-category" class="container product-category-container-block">

  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }} product-block-padding-0">{{ content_top }}
      <div class="category-header">
        {% if category_id == 59 %}
          {% if current_lang == "uk-ua" %}<h1>Добрива для позакореневого живлення</h1>{% endif %}
          {% if current_lang == "ru-ru" %}<h1>Удобрения для внекорневой подкормки</h1>{% endif %}
          {% if current_lang == "en-gb" %}<h1>Fertilizers for foliar nutrition</h1>{% endif %}
        {% endif %}

        {% if category_id == 60 %}
          {% if current_lang == "uk-ua" %}<h1>Живлення через ґрунт</h1>{% endif %}
          {% if current_lang == "ru-ru" %}<h1>Питание через почву</h1>{% endif %}
          {% if current_lang == "en-gb" %}<h1>Nutrition through the soil</h1>{% endif %}
        {% endif %}
      </div>

      {% if products %}
        {% for product in products %}
          <div class="row product-column">
            <div class="product-layout product-right-padding">
              <div class="product-thumb transition product-border">
                <div class="product-image-block"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="product-img" /></a></div>
              </div>
                <div class="product-layout product-information-block">
                    <div class="product-width-90-flex-center">
                        <div class="product-header-block">
                            <h2 class="product-title">{{ product.name }}</h2>
                            {% for attribute_group in product.attribute_groups %}
                                <h2 class="product-pack-info">
                                    {% if attribute_group.attribute_group_id == 9 %}
                                        {{ attribute_group.attribute.0.name }}
                                    {% endif %}
                                </h2>

                                <p class="product-direction-info">
                                    {% if attribute_group.attribute_group_id == 10 %}
                                        {{ attribute_group.attribute.0.name }}
                                    {% endif %}
                                </p>
                            {% endfor %}
                        </div>
                        <div class="caption product-information">
                            <div class="row product-some-information-block">
                                <div class="product-and-form-block-flex">
                                    {% for attribute_group in product.attribute_groups %}
                                        {% if attribute_group.attribute_group_id == 8 %}
                                            <div class="col-sm-3">
                                                <div class="product-form-block">
                                                    <div>
                                                        {% if attribute_group.attribute.0.attribute_id == 28 or attribute_group.attribute.0.attribute_id == 29 or attribute_group.attribute.0.attribute_id == 102%}
                                                            <img src="image/catalog/Products/form-babble.png" class="product-form-img product-form-img-babble">
                                                        {% endif %}
                                                        {% if attribute_group.attribute.0.attribute_id == 30 %}
                                                            <img src="image/catalog/Products/form.png" class="product-form-img">
                                                        {% endif %}
                                                        {% if attribute_group.attribute.0.attribute_id == 31 %}
                                                            <img src="image/catalog/Products/form-water.png" class="product-form-img">
                                                        {% endif %}
                                                    </div>

                                                    <div class="form-block-flex-column">
                                                        <h4 class="product-form-h4">
                                                            {% if current_lang == "uk-ua" %}Форма{% endif %}
                                                            {% if current_lang == "ru-ru" %}Форма{% endif %}
                                                            {% if current_lang == "en-gb" %}Form{% endif %}
                                                        </h4>
                                                        <p class="product-category-form-p">{{ attribute_group.attribute.0.name }}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {% if attribute_group.attribute_group_id == 9 %}
                                            <div class="col-sm-3">
                                                <div class="product-pack-block">
                                                    <div>
                                                        {% if attribute_group.attribute.0.attribute_id == 36 %}
                                                            <img src="image/catalog/Products/1pack.png" class="product-pack-img-pack">
                                                        {% else %}
                                                            <img src="image/catalog/Products/pack.png" class="product-pack-img">
                                                        {% endif %}
                                                    </div>
                                                    <div>
                                                        <h4 class="product-pack-h4">
                                                            {% if current_lang == "uk-ua" %}Пакування{% endif %}
                                                            {% if current_lang == "ru-ru" %}Упаковка{% endif %}
                                                            {% if current_lang == "en-gb" %}Packaging{% endif %}
                                                        </h4>
                                                        <p class="product-category-pack-p">{{ attribute_group.attribute.0.name }}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>

                                <div class="col-sm-6 btn-flex-block-center">
                                    <a href="{{ product.href }}" class="btn-learn-more-100">
                                        {% if current_lang == "uk-ua" %}
                                            <button type="button" class="btn btn-success product-info-btn">Дізнатись детальніше
                                            </button>{% endif %}
                                        {% if current_lang == "ru-ru" %}
                                            <button type="button" class="btn btn-success product-info-btn">Узнать подробнее
                                            </button>{% endif %}
                                        {% if current_lang == "en-gb" %}
                                            <button type="button" class="btn btn-success product-info-btn">Learn more</button>{% endif %}
                                    </a>
                                </div>
                            </div>

{#                            <div class="delivery-info-block">#}
{#                                <p class="delivery-info-p">#}
{#                                    {% if current_lang == "uk-ua" %}Доставка прораховується індивідуально{% endif %}#}
{#                                    {% if current_lang == "ru-ru" %}Доставка рассчитывается индивидуально{% endif %}#}
{#                                    {% if current_lang == "en-gb" %}Delivery is calculated individually{% endif %}#}
{#                                </p>#}
{#                                <img src="image/catalog/Products/truck.png" class="delivery-info-img">#}
{#                            </div>#}

                            {% for attribute_group in product.attribute_groups %}
                                {% if attribute_group.attribute_group_id == 7 %}
                                    <div class="product-attribute-table-block">
                                        <h4 class="product-attribute-h4">
                                            {% if current_lang == "uk-ua" %}Склад{% endif %}
                                            {% if current_lang == "ru-ru" %}Состав{% endif %}
                                            {% if current_lang == "en-gb" %}Composition{% endif %}
                                        </h4>
                                        <table class="table product-attribute-table-main">
                                            <tbody>
                                            {% for attribute in attribute_group.attribute %}
                                                <tr class="col-lg-12 col-md-12 col-sm-12 col-xs-12 product-attribute-table-tr table-tr-flex">
                                                    {% if attribute.text %}
                                                        <td class="col-lg-3 col-md-3 col-sm-3 col-xs-3 product-attribute-table-td-text">{{ attribute.text }}</td>
                                                        <td class="col-lg-9 col-md-9 col-sm-9 col-xs-9 product-attribute-table-td-name">{{ attribute.name }}</td>
                                                    {% else %}
                                                        <td class="col-lg-12 col-md-12 col-sm-12 col-xs-12 product-attribute-table-td-name">{{ attribute.name }}</td>
                                                    {% endif %}
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>

                </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
      {% if not categories and not products %}
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
</div>
    {{ column_right }}</div>
</div>
{{ content_bottom }}

