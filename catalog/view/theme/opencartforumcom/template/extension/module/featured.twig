{% for product in products %}
<div class="row product-column">
    <div class="product-layout col-lg-4 col-md-4 col-sm-4 col-xs-4 product-right-padding">
      <div class="product-thumb transition product-border">
        <div class="product-image-block"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="product-img" /></a></div>
      </div>
    </div>
    <div class="product-layout col-lg-7 col-md-7 col-sm-7 col-xs-7 product-information-block">
        <h2 class="product-title">{{ product.name }}</h2>
      <div class="caption product-information">

          {% for attribute_group in product.attribute_groups %}
              {% if attribute_group.attribute_group_id == 10%}
                  <p class="product-direction-info">{{ attribute_group.attribute.0.name }}</p>
              {% endif %}


              {% if attribute_group.attribute_group_id == 9 %}
                  <div class="product-pack-block">
                      <h2 class="product-pack-info">{{ attribute_group.attribute.0.name }}</h2>
                      <h4 class="product-pack-h4">Упаковка</h4>
                      <p class="product-pack-p">{{ attribute_group.attribute.0.name }}</p>
                      <img src="image/catalog/Products/pack.png" class="product-pack-img">
                  </div>
              {% endif %}

             {% if attribute_group.attribute_group_id == 8 %}
                 <div class="product-form-block">
                     <img src="image/catalog/Products/form.png" class="product-form-img">
                     <h4 class="product-form-h4">Форма</h4>
                     <p class="product-form-p">{{ attribute_group.attribute.0.name }}</p>
                 </div>
             {% endif %}

             <div class="product-attribute-table-block">
                 {% if attribute_group.attribute_group_id == 7 %}
                     <h4 class="product-attribute-h4">Склад</h4>
                     <table class="table product-attribute-table">
                         <tbody>
                         {% for attribute in attribute_group.attribute %}
                             <tr class="col-lg-6 col-md-6 col-sm-6 col-xs-6 product-attribute-table-tr">
                                 <td class="col-lg-3 col-md-3 col-sm-3 col-xs-3 product-attribute-table-td-text">{{ attribute.text }}</td>
                                 <td class="col-lg-9 col-md-9 col-sm-9 col-xs-9 product-attribute-table-td-name">{{ attribute.name }}</td>
                             </tr>
                         {% endfor %}
                         </tbody>
                     </table>
                 {% endif %}
             </div>

          {% endfor %}
          <a href="{{ product.href }}">
              <button type="button" class="btn btn-success product-info-btn">Дізнатись детальніше</button>
          </a>
          <div class="delivery-info-block">
              <p class="delivery-info-p">Доставка прораховується індивідуально</p>
              <img src="image/catalog/Products/truck.png" class="delivery-info-img">
          </div>
      </div>
    </div>
</div>

{% endfor %}

